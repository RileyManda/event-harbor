<%= link_to category_path(category), class: "block rounded-lg overflow-hidden shadow-md bg-white p-6 my-4" do %>
  <div class="mb-4">
    <p class="text-gray-700"><%= category.name %></p>
  </div>
  <div class="mb-4 flex items-center justify-center">
    <span class="text-6xl"><%= category.icon %></span>
  </div>
  <% if action_name == "show" %>
    <div class="mb-4 flex items-center justify-center">
      <span class="text-2xl"><%= category.description %></span>
    </div>
  <% end %>
<% end %>
