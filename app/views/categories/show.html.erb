<% content_for :content do %>
<div class="p-4 sm:ml-64">
   <div class="mt-4">
      <%= link_to categories_path, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium flex items-center" do %>
        <%= raw('<svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>All Categories') %>
      <% end %>
    </div>
  <div class="mx-auto">
    <% if notice.present? %>
     <%= render "shared/notifications"%>
    <% end %>

    <div class="block rounded-lg overflow-hidden shadow-md bg-white p-6 my-4">
      <div class="mb-4">
        <p class="text-gray-700"><%= @category.name %></p>
      </div>
      <div class="mb-4">
        <span class="inline-flex items-center rounded-md bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-orange-600/20">Number of events: <%= @event_count %></span>
      </div>
      <div class="mb-4 flex items-center justify-center">
        <span class="text-6xl"><%= @category.icon %></span>
      </div>
      <div class="mb-4 flex items-center justify-center">
        <span class="text-4xl"><%= @category.description %></span>
      </div>

      <div class="mt-4 flex items-center space-x-2">
        <%= link_to edit_category_path(@category), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium flex items-center" do %>
          <%= raw('<svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5a6 6 0 00-6 6v6a2 2 0 002 2h2a2 2 0 002-2v-6a4 4 0 018 0v3a2 2 0 002 2h2a2 2 0 002-2v-3a6 6 0 00-6-6z"></path></svg>Edit') %>
        <% end %>

        <%= button_to category_path(@category), method: :delete, class: "rounded-lg py-3 px-5 bg-gray-100 font-medium flex items-center" do %>
          <%= raw('<svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6a2 2 0 012-2h14a2 2 0 012 2M5 6V20a2 2 0 002 2h10a2 2 0 002-2V6m-2 0l-4-4m0 0l-4 4m4-4v12"></path></svg>Delete') %>

        <% end %>
      </div>
    </div>


  </div>
</div>
<% end %>
<%= render "shared/dashboard" %>
