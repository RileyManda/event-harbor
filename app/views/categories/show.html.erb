<%= render "shared/dashboard_layout" %>
<div class="mx-auto md:w-2/3 w-full">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <div class="block rounded-lg overflow-hidden shadow-md bg-white p-6 my-4">
      <div class="mb-4">
        <p class="text-gray-700"><%= @category.name %></p>
      </div>
       <div class="mb-4">
         <span class="inline-flex items-center rounded-md bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-orange-600/20">Number of events: <%= @event_count %></span>
      </div>
      <div class="mb-4 flex items-center justify-center">
        <span class="text-6xl"><%= @category.icon %></span>
      </div>
      <div class="mb-4 flex items-center justify-center">
        <span class="text-4xl"><%= @category.description %></span>
      </div>

    </div>
    <div class="mt-4 flex items-center">
      <%= link_to "Edit this category", edit_category_path(@category), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium mr-2" %>

      <%= button_to "Destroy this category", category_path(@category), method: :delete, class: "rounded-lg py-3 px-5 bg-gray-100 font-medium mr-2" %>

      <%= link_to "Back to categories", categories_path, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    </div>
  </div>
</div>
<%= render "shared/footer" %>
