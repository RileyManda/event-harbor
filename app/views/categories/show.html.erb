<% content_for :content do %>
   <div class="mb-8 p-4 h-96 sm:ml-64 mt-2 bg-white border border-gray-200 shadow dark:bg-gray-800 dark:border-gray-700">
   <div class="md:w-1/6 w-full absolute">
    <% if notice.present? %>
      <%= render "shared/notifications" %>
    <% end %>
  </div>
      <div class="flex items-center mb-4">
      <%= link_to categories_path, class: "text-blue-600 hover:text-blue-800 dark:text-blue-500 dark:hover:text-white-900" do %>
     <svg width=30px height="30px" viewBox="0 0 1024 1024" fill="#fff" class="icon" version="1.1" xmlns="http://www.w3.org/2000/svg" stroke="#fff"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"><path d="M669.6 849.6c8.8 8 22.4 7.2 30.4-1.6s7.2-22.4-1.6-30.4l-309.6-280c-8-7.2-8-17.6 0-24.8l309.6-270.4c8.8-8 9.6-21.6 2.4-30.4-8-8.8-21.6-9.6-30.4-2.4L360.8 480.8c-27.2 24-28 64-0.8 88.8l309.6 280z" fill=""></path></g></svg>
      <% end %>
    </div>
        <ul class="flex flex-wrap text-sm font-medium text-center text-gray-500 border-b border-gray-200 rounded-t-lg bg-gray-50 dark:border-gray-700 dark:text-gray-400 dark:bg-gray-800" id="defaultTab" data-tabs-toggle="#defaultTabContent" role="tablist">
            <li class="me-2">
                <button id="about-tab" data-tabs-target="#about" type="button" role="tab" aria-controls="about" aria-selected="true" class="inline-block p-4 text-blue-600 rounded-ss-lg hover:bg-gray-100 dark:bg-gray-800 dark:hover:bg-gray-700 dark:text-blue-500">About</button>
            </li>
            <li class="me-2">
                <button id="services-tab" data-tabs-target="#services" type="button" role="tab" aria-controls="services" aria-selected="false" class="inline-block p-4 hover:text-gray-600 hover:bg-gray-100 dark:hover:bg-gray-700 dark:hover:text-gray-300">Events</button>
            </li>
            <li class="me-2">
                <button id="statistics-tab" data-tabs-target="#statistics" type="button" role="tab" aria-controls="statistics" aria-selected="false" class="inline-block p-4 hover:text-gray-600 hover:bg-gray-100 dark:hover:bg-gray-700 dark:hover:text-gray-300">Popularity</button>
            </li>
        </ul>


        <div id="defaultTabContent">
        <div class="hidden p-4 bg-white rounded-lg md:p-8 dark:bg-gray-800" id="about" role="tabpanel" aria-labelledby="about-tab">
      <dl class="grid max-w-screen-xl grid-cols-2 gap-8 p-4 mx-auto text-gray-900 sm:grid-cols-3 xl:grid-cols-6 dark:text-white sm:p-8">
                    <div class="flex flex-col">
                        <h2 class="mb-3 text-3xl font-extrabold tracking-tight text-gray-900 dark:text-white"><%= @category.name %></h2>
                         <div>
    <p class="mb-3 text-gray-500 dark:text-gray-400"><%= @category.description %></p>
  </div>

                    </div>

   <div class="flex items-center justify-between">
  <div class="flex-shrink-0 ml-auto">
    <span class="text-8xl"><%= @category.icon %></span>
  </div>
</div>


                    <div class="flex flex-col">
                       <div class="flex  p-2 mt-0">
  <a href="#" class="inline-flex items-center font-medium text-green-800 hover:text-green-800 dark:text-green-500 dark:hover:text-orange-700">
    <%= link_to new_category_path, class: "inline-flex items-center font-medium text-green-700 hover:text-green-700 dark:text-green-500 hover:text-white" do %>
      Create Category
      <svg class="w-2.5 h-2.5 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
      </svg>
    <% end %>
  </a>

   <a href="#" class="inline-flex items-center font-medium text-blue-800 hover:text-blue-800 dark:text-blue-500 dark:hover:text-white">
    <%= link_to edit_category_path(@category), class: "inline-flex items-center font-medium text-blue-600 hover:text-blue-600 dark:text-blue-800 hover:text-white" do %>
      Edit Category
      <svg class="w-2.5 h-2.5 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
      </svg>
    <% end %>
  </a>



    <a href="#" class="inline-flex items-center font-medium text-red-800 hover:text-red-800 dark:text-red-800 dark:hover:text-white">
    <%= button_to category_path(@category), method: :delete, class: "inline-flex items-center font-medium text-red-600 hover:text-red-800 dark:text-red-500 hover:text-white" do %>
      Delete Category
      <svg class="w-2.5 h-2.5 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
      </svg>
    <% end %>
  </a>



</div>

                    </div>



                </dl>




</div>
</div>

            <div class="hidden p-4 bg-white rounded-lg md:p-8 dark:bg-gray-800" id="services" role="tabpanel" aria-labelledby="services-tab">
                <h2 class="mb-5 text-2xl font-extrabold tracking-tight text-gray-900 dark:text-white">Event Analytics</h2>
                <!-- List -->
                <ul role="list" class="space-y-4 text-gray-500 dark:text-gray-400">
                    <li class="flex space-x-2 rtl:space-x-reverse items-center">
                        <svg class="flex-shrink-0 w-3.5 h-3.5 text-blue-600 dark:text-blue-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 8.207-4 4a1 1 0 0 1-1.414 0l-2-2a1 1 0 0 1 1.414-1.414L9 10.586l3.293-3.293a1 1 0 0 1 1.414 1.414Z"/>
                        </svg>
                        <span class="leading-tight">Number of events in this category: <%= @event_count %></span>
                    </li>
                </ul>
            </div>
            <div class="hidden p-4 bg-white rounded-lg md:p-8 dark:bg-gray-800" id="statistics" role="tabpanel" aria-labelledby="statistics-tab">
                <dl class="grid max-w-screen-xl grid-cols-2 gap-8 p-4 mx-auto text-gray-900 sm:grid-cols-3 xl:grid-cols-6 dark:text-white sm:p-8">
                    <div class="flex flex-col">
                        <dt class="mb-8 text-xl font-extrabold">73M+</dt>
                        <dd class="text-gray-500 dark:text-gray-400">Private Companies</dd>
                    </div>
                    <div class="flex flex-col">
                        <dt class="mb-2 text-xl font-extrabold">100M+</dt>
                        <dd class="text-gray-500 dark:text-gray-400">NGO's</dd>
                    </div>
                    <div class="flex flex-col">
                        <dt class="mb-2 text-xl font-extrabold">1000s</dt>
                        <dd class="text-gray-500 dark:text-gray-400">Corporate Clients</dd>
                    </div>
                </dl>
            </div>
        </div>
    </div>

<% end %>
<%= render "shared/dashboard" %>

