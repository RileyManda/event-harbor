<%= form_with(model: category, class: "contents") do |form| %>
  <% if category.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex flex-wrap -mx-4 mb-20">
  <div class="w-full px-4 md:w-1/2 lg:w-1/3">
    <div class="mb-12">
       <label for="" class="mb-[10px] block text-base font-medium text-dark dark:text-white">
         Name
         </label>
     <%= form.text_field :name, placeholder: "Enter category name", class: "w-full bg-transparent rounded-md border border-stroke dark:border-dark-3 py-[10px] px-5 text-dark-6 outline-none transition focus:border-primary active:border-primary disabled:cursor-default disabled:bg-gray-2 disabled:border-gray-2" %>
    </div>
    </div>
<div class="w-full px-4 md:w-1/2 lg:w-1/3">
     <div class="">
       <label for="" class="mb-[10px] block text-base font-medium text-dark dark:text-white">
         Description
         </label>
     <%= form.text_field :description, placeholder: "Category Description", class: "w-full bg-transparent rounded-md border border-stroke dark:border-dark-3 py-[10px] px-5 text-dark-6 outline-none transition focus:border-primary active:border-primary disabled:cursor-default disabled:bg-gray-2 disabled:border-gray-2" %>
    </div>
     </div>

    <div class="w-full px-4 md:w-1/2 lg:w-1/3 mb-12">
      <label for="" class="mb-[10px] block text-base font-medium text-dark dark:text-gray-900">
         Select category Icon
         </label>
      <%= form.select :icon, @icon_choices, {}, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

<div class="w-full mt-auto px-4 inline-flex rounded-md shadow-sm" role="group">
   <%= form.submit class: "cursor-pointer px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-s-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-2 focus:ring-blue-700 focus:text-blue-700 dark:bg-gray-700 dark:border-gray-600 dark:text-white dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-blue-500 dark:focus:text-white" %>

  <%= link_to categories_path, class: "px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-s-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-2 focus:ring-blue-700 focus:text-blue-700 dark:bg-gray-700 dark:border-gray-600 dark:text-white dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-blue-500 dark:focus:text-white" do %>
    All Categories
  <% end %>
   <%= link_to categories_path, class: "px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-s-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-2 focus:ring-blue-700 focus:text-blue-700 dark:bg-gray-700 dark:border-gray-600 dark:text-white dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-blue-500 dark:focus:text-white" do %>
    Cancel
  <% end %>


</div>
  </div>
<% end %>
