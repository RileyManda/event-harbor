<div id="<%= dom_id participant %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= participant.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Email:</strong>
    <%= participant.email %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Event:</strong>
    <%= participant.event_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Attending:</strong>
    <%= participant.attending %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this participant", participant, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this participant", edit_participant_path(participant), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
