<%= link_to event_path(event) do %>
  <div class="bg-white p-4 rounded-lg shadow-md">
    <%= image_tag(event.avatar, alt: 'Event Avatar', class: 'w-10 h-10 rounded-full') if event.avatar.present? %>
    <%= image_tag(event.banner, alt: 'Event Banner', class: 'rounded-t-lg') if event.banner.present? %>
    <h2 class="text-lg font-semibold mb-2"><%= event.name %></h2>
    <p class="text-gray-600"><%= event.description %></p>
  </div>
<% end %>
