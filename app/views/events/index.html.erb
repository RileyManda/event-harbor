<%= render "shared/dashboard_layout" %>
<%= render "shared/trending_events" %>
<div class="mx-auto md:w-2/3 w-full flex items-center justify-between">
  <div class="mx-auto">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Events</h1>
    <%= link_to "New event", new_event_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="events" class="min-w-full">
    <%= render @events %>
  </div>
</div>
</div>
<%= render "shared/footer" %>
