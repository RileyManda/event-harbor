<% content_for :content do %>
<div class="p-4 sm:ml-64 mt-8">
  <div class="mx-auto md:w-1/6 w-full">
    <% if notice.present? %>
      <%= render "shared/notifications" %>
    <% end %>
</div>
<div class="mx-full md:w-2/3 w-full flex mt-8">
  <div class="mx-auto">
    <%= render @event %>
    <%= link_to "Edit this event", edit_event_path(@event), class: "button border-none mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Delete event", event_path(@event), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to "Back to events", events_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
   <div class="mt-4 flex justify-end">
   <div><span class="inline-flex items-center rounded-md bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20">Happening Now</span></div>
   RSVP:
   <a class="flex items-center justify-center w-10 h-10 text-xs font-medium text-white bg-gray-400 border-2 border-white rounded-full hover:bg-gray-600 dark:border-gray-800" href="#">+99</a>
   
   </div>

</div>

</div>

<% end %>
<%= render "shared/dashboard" %>



